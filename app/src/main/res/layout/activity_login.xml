<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="@drawable/backgroundcard"
        android:layout_marginHorizontal="40dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:background="#00ffffff"
            android:text="Qiscus"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppinssemibold">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:text="Quote Challenge Chico Finando"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppinsmedium">

        </TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundform">
            <EditText
                android:id="@+id/userId"
                android:paddingTop="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/user"
                android:drawableTint="#99000000"
                android:drawablePadding="10dp"
                android:hint="User ID"
                android:fontFamily="@font/poppins"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textColorHint="#99000000"
                android:textColor="#99000000"
                android:background="#00ffffff">

            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ACACAC"></LinearLayout>
            <EditText
                android:id="@+id/userKey"
                android:paddingTop="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/pass"
                android:drawableTint="#99000000"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:fontFamily="@font/poppins"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColorHint="#99000000"
                android:textColor="#99000000"
                android:background="#00ffffff">

            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ACACAC"></LinearLayout>
            <EditText
                android:id="@+id/displayName"
                android:paddingTop="1dp"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/user"
                android:drawableTint="#99000000"
                android:drawablePadding="10dp"
                android:hint="Display Name"
                android:fontFamily="@font/poppins"
                android:textFontWeight="500"
                android:textSize="15dp"
                android:textColorHint="#99000000"
                android:textColor="#99000000"
                android:background="#00ffffff">

            </EditText>

        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/backgroundbutton"
            android:text="Login"
            android:textColor="#ffffff"
            android:fontFamily="@font/poppinssemibold">

        </Button>





    </LinearLayout>
</RelativeLayout>